<%= render partial: "layouts/header_school_days_edit", locals: {active_school_day: @school_day, previous_school_day: @previous_school_day, next_school_day: @next_school_day} %>

<div class="matter">
  <div class="container-fluid">

    <%= render "layouts/messages" %>
    
    <div class="row-fluid fit-content">

      <div class="span7 maxspan minspan dayform-span">
        <div class="widget wlightblue mainwidget">
          <div class="widget-head">
            <div class="pull-left">Editing School Day</div>
            <div class="widget-icons pull-right">
              <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a> 
              <!-- <a href="#" class="wclose"><i class="icon-remove"></i></a> -->
            </div>
            <div class="clearfix"></div>
          </div>

          <div class="widget-content">
            <div class="padd lowtop">

              <%= render 'form' %>

            </div>
          </div>
        </div>
      </div>

      <div class="widget wlightblue mainwidget preview-panel" style="display:none;">
        <div class="widget-head">
          <div class="pull-left">Preview Resource</div>
          <div class="widget-icons pull-right">
            <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a> 
            <a href="#" class="wclose"><i class="icon-remove"></i></a>
          </div>
          <div class="clearfix"></div>
        </div>

        <div class="widget-content">
              
          <iframe name="resource_preview" id="resource_preview" class="preview-frame affix-top" frameBorder="0"></iframe>

        </div>
      </div>

    </div>

  </div>
</div>