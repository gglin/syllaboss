<h1>All School Days</h1>

<table class="table">
  <tr>
    <th>Day</th>
    <th>Week</th>
    <th>Date</th>
    <th>Schedule</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @school_days.each do |school_day| %>
  <tr>
    <td><h3><%= link_to school_day.ordinal, school_day %></h3></td>
    <td><h4><%= school_day.week %></h4></td>
    <td><%= school_day.calendar_date %></td>
    <td><%= school_day.paragraphize(school_day.schedule).html_safe %></td>
    <td><%= link_to 'Show', school_day %></td>
    <td><%= link_to 'Edit', edit_school_day_path(school_day) %></td>
    <td><%= link_to 'Destroy', school_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New School day', new_school_day_path %>
