<p id="notice"><%= notice %></p>

<p>
  <b>Creator:</b>
  <%= @lecture.creator %>
</p>

<p>
  <b>Title:</b>
  <%= @lecture.title %>
</p>

<p>
  <b>Content:</b>
  <%= @lecture.paragraphize(@lecture.content).html_safe %>
</p>

<p>
  <b>Attached Files:</b>
  <ol>
  <% @lecture.attachments.each do |attachment| %>
    <li>
      <%= link_to attachment.title, attachment.filename.to_s %>
    </li>
  <% end %>
  </ol>
</p>


<%= link_to 'Edit', edit_lecture_path(@lecture) %> |
<%= link_to 'Back', lectures_path %>
