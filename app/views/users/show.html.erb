
<div class="matter">
  <div class="container-fluid">

    <%= render "layouts/messages" %>
    <div class="row-fluid fit-content">

      <div class="span9 maxspan minspan">
        <div class="widget wlightblue mainwidget">
          <div class="widget-head">
            <div class="pull-left">Profile</div>
            <div class="widget-icons pull-right">
              <% if can? :edit, @user %>
                <span class="admin"><a href="<%= edit_user_path %>"><i class="icon-pencil"></i></a></span>
              <% end %>

              <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a> 
              <!-- <a href="#" class="wclose"><i class="icon-remove"></i></a> -->
            </div>
            <div class="clearfix"></div>
          </div>

          <div class="widget-content">
            <div class="padd lowtop">

              <p>
              <h3><%= @user.full_name %></h3>
          
              <%= image_tag @user.image.url(:thumb) %>
          
            <p><a href="mailto:<%= @user.email%>"><%= @user.email%></a></p>
            <a href="http://<%= @user.linkedin%>" target="_blank"><i class="icon-linkedin icon-2x"></a></i>&nbsp;
            <a href="http://<%= @user.facebook%>" target="_blank"><i class="icon-facebook icon-2x"></i></a>&nbsp;
            <a href="http://<%= @user.twitter%>" target="_blank"><i class="icon-twitter icon-2x"></i></a>
              </p>

              <p>
              </p>

            </div>
          </div>
        </div>
      </div>

    </div>
    

  </div>
</div>