<h1>Log In</h1>
<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<%= form_tag sessions_path do%>
  <div class="field">
    <%= label_tag :username%><br />
    <%= text_field_tag :username, params[:username]%>
  </div>
  
  <div class="field">
    <%= label_tag :password%><br />
    <%= password_field_tag :password%>
  </div>

  <div class="actions">
    <%= submit_tag "Log In"%></div>
<%end%>


