<%= form_for(@potd) do |f| %>
  <% if @potd.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@potd.errors.count, "error") %> prohibited this potd from being saved:</h2>

      <ul>
      <% @potd.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
   <div class="field">
    <%= f.label :wikipedia %><br />
    <%= f.text_field :wikipedia %>
  </div>
  <div class="field">
    <%= f.label :presentation_url %><br />
    <%= f.text_field :presentation_url %>
  </div>

 
   <div class="field">
    <%= f.label :school_day, "Select Day(s) for this Programmer:" %><br />
    <%= f.collection_select(:school_day_ids, SchoolDay.order("ordinal DESC"), :id, :ordinal, {:selected => @potd.school_day_ids, :prompt => "Please Select Day(s)"}, {:class => "span4", multiple: "multiple"}) %>
  </div>


  <div class="actions">
    <%= f.submit "#{@action} Programmer of the Day" %>
  </div>
<% end %>
