
<%= form_for [parent, new_comment] do |f| %>                     
  <% if current_user %>
    <div class="field">
      <% comment_user = f.object.user_id || current_user.id %>
      <%= f.hidden_field :user_id, :value => comment_user %>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_area :content, :placeholder => "Leave a reply", rows: 5, value: default_value, class: "commentspan" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-info" %>
  </div>
<% end %>
