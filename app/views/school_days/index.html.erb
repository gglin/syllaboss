<div class="page-head">
  <h1>All School Days</h1>
    <%= form_tag "/searches", :method => :get do %>
      <%= text_field_tag :search, params[:search], :placeholder =>"Search" %>
      <%= submit_tag "Search", :title => nil%>
    <% end %>

</div>

<div class="matter">
  <div class="container-fluid">
    <div class="row-fluid">

      <%= render "layouts/messages" %>

      <table class="table">
        <tr>
          <th>Day</th>
          <th>Week</th>
          <th>Date</th>

          <th>Schedule</th>
          <th><%= link_to 'Programmer of the Day', potds_path %></th>
          <th><%= link_to 'Labs', labs_path %></th>
          <th><%= link_to 'Homeworks', homeworks_path %></th>
          <th><%= link_to 'Links', links_path %></th>
        </tr>

        <% @school_days.each do |school_day| %>
        <tr class="hoverable">
          <td>
            <h2><%= link_to school_day.ordinal, school_day %></h2>
                <span class="admin"><%= link_to 'Edit', edit_school_day_path(school_day) %>
                <%= link_to 'Delete', school_day, method: :delete, data: { confirm: 'Are you sure?' } %></span>
          </td>
          <td><h4><%= school_day.week %></h4></td>
          <td><%= school_day.calendar_date %></td>

          <td><%= simple_format(truncate school_day.schedule, length: 150) %></td>
          <td>
            <% if school_day.potd %>
              <%= link_to school_day.potd.name, edit_potd_path(school_day.potd), :target => "_blank" %>
            <% end %>
          </td>
          <td>
            <% school_day.labs.each do |lab| %>
             <%= link_to lab.name, lab.http_link(lab.lab_url), :target => "_blank"%>
            <% end %>
          </td>
          <td>
            <% school_day.homeworks.each do |homework| %>
              <%= link_to homework.title, edit_homework_path(homework), :target => "_blank"%>
            <% end %>
          </td>
          <td>
            <% school_day.links.each do |link| %>
              <%= link_to link.title, link.http_link(link.link_url), :target => "_blank"%>
            <% end %>
          </td>
       
        </tr>
        <% end %>
      </table>
        
    </div>
  </div>
</div>

<br />

<%= link_to 'New School day', new_school_day_path %>
