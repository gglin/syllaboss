<h1> Sign up</h1>
<%= form_for @user, :html => {:multipart => true} do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :full_name, "Full Name #{mark_required(@user, :full_name)}" %><br />
    <%= f.text_field :full_name %>
  </div>
 
  <!-- <div class="field"> 
    <%# f.label :username, "Username #{mark_required(@user, :username)}" %><br />
    <%# f.text_field :username %>
  </div> -->

  <div class="field">
    <%= f.label :email, "Email #{mark_required(@user, :email)}" %><br />
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :remote_image_url, "or image URL:" %><br />
    <%= f.file_field :image %>
  </div>

   <div class="field">
    <%= f.label :password, "Password #{mark_required(@user, :password)}" %><br />
    <%= f.password_field :password %>
  </div>

     <div class="field">
    <%= f.label :password_confirmation, "Password Confirmation #{mark_required(@user, :password_confirmation)}" %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit "#{@action} Submit" %>
  </div>

<% end %>

<%= link_to "Log In!", new_session_path %>

