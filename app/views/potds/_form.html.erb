<%= form_for @potd, :html => {class: "form-horizontal"}  do |f| %>
  <% if @potd.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@potd.errors.count, "error") %> prohibited this potd from being saved:</h2>

      <ul>
      <% @potd.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, "Name #{mark_required(@potd, :name)}", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>
   <div class="control-group">
    <%= f.label :wikipedia, "Wikipedia URL #{mark_required(@potd, :wikipedia)}", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :wikipedia %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :presentation_url, "Presentation URL #{mark_required(@potd, :presentation_url)}", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :presentation_url %>
    </div>
  </div>

  <div class="field">
    <%= hidden_field_tag :last_page, params[:day]%>
  </div>

 
   <div class="control-group">
    <%= f.label :school_day, "Select Day(s)", class: "control-label" %>
    <div class="controls">
      <% selected_ids = @potd.school_day_ids %>
      <% selected_ids << params[:day] %>
      <%= f.collection_select(:school_day_ids, SchoolDay.order("ordinal DESC"), :id, :ordinal, {:selected => selected_ids, :prompt => "Please Select Day(s)"}, {:class => "span4", multiple: "multiple"}) %>
    </div>
  </div>


  <div class="actions inline">
    <%= f.submit "Submit", class: "btn btn-info" %>
  </div>
    <% if @potd.persisted? %>
      <%= link_to "Cancel", @potd, class: "btn btn-inverse link-btn" %> 
    <% else %>
      <% if params[:last_page].nil? || params[:last_page].empty? %>
        <%= link_to "Cancel", "/", class: "btn btn-inverse link-btn" %> 
      <% else %>
        <% if params[:day].empty? %>
          <%= link_to "Cancel", new_school_day_path, class: "btn btn-inverse link-btn" %>
        <% else %>
          <%= link_to "Cancel", edit_school_day_path(SchoolDay.find(params[:day])), class: "btn btn-inverse link-btn" %>
        <% end %>
      <% end %>
    <% end %>
<% end %>
