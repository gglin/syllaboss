<%= form_for @lab, :html => {class: "form-horizontal"} do |f| %>
  <% if @lab.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lab.errors.count, "error") %> prohibited this lab from being saved:</h2>

      <ul>
      <% @lab.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, "Name #{mark_required(@lab, :name)}", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :lab_url, "URL #{mark_required(@lab, :lab_url)}", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :lab_url %>
    </div>
  </div>

  <div class="field">
    <%= hidden_field_tag :last_page, params[:day]%>
  </div>

   <div class="control-group">
    <%= f.label :school_day, "Select Day(s)", class: "control-label" %>
    <div class="controls">
      <% selected_ids = @lab.school_day_ids %>
      <% selected_ids << params[:day] %>
      <%= f.collection_select(:school_day_ids, SchoolDay.order("ordinal DESC"), :id, :ordinal, {:selected => selected_ids, :prompt => "Please Select Day(s)"}, {:class => "span4", multiple: "multiple"}) %>
    </div>
  </div>

  <div class="actions inline">
    <%= f.submit "Submit", class: "btn btn-info" %>
  </div>
    <% if @lab.persisted? %>
      <%= link_to "Cancel", @lab, class: "btn btn-inverse link-btn" %> 
    <% else %>
      <%= link_to "Cancel", "/", class: "btn btn-inverse link-btn" %> 
    <% end %>

<% end %>
