
<div class="page-head">
  <h3 class="inline">All School Days</h3>
  <% if can? :create, @school_day %>
   <span class="btn btn-warning pull-right admin-title"><%= link_to 'New School day', new_school_day_path %></span>
  <% end %>
  <ul class="breadcrumb" >
    <li>

      <a href="#">Semester 002 </a> 

      <span class="divider">/</span>

    </li>

    <li class="dropdown">
      <%= link_to "Week #{@active_school_day.week}", "#" %>
      <a class="dropdown-toggle" role="button" data-toggle="dropdown" href="#">
        <i class = "caret"></i>
      </a>

      <span class="divider">/</span>

      <ul class="dropdown-menu" role="menu">
        <% SchoolDay.all.each do |school_day| %>
          <li><%= link_to "Week #{school_day.week}", '#' %></li>
        <% end %>
        <li><%= link_to "Show All Weeks", '#' %></li>
      </ul>
    </li>

    <li class="dropdown">
      <a class="dropdown-toggle" role="button" data-toggle="dropdown" href="#">
        Day <%= @active_school_day.ordinal %>
        <i class = "caret"></i>
      </a>
      <ul class="dropdown-menu" role="menu">
        <% SchoolDay.all.each do |school_day| %>
          <li><%= link_to "Day #{school_day.ordinal}", school_day_path(school_day) %></li>
        <% end %>
        <li><%= link_to "Show All Days", school_days_path %></li>
      </ul>
    </li>
  </ul>
</div>
<div class="matter">
  <div class="container-fluid">
    <div class="row-fluid fit-content">

