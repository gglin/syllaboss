<%= form_for [parent, new_comment] do |f| %>                     
  <% if current_user %>
    <div class="field">
      <%= f.hidden_field :user_id, :value => current_user.id %>
    </div>
  <% end %>

  <div class="row-fluid fit-content">
    <div class="span8">
      <div class="field">
        <%= f.text_area :content, :placeholder => "Leave a comment", rows: 5, value: default_value, class: "commentspan" %>
      </div>

      <div class="actions">
        <%= f.submit "Submit", class: "btn btn-info" %>
      </div>
    </div>
  </div>
<% end %>
