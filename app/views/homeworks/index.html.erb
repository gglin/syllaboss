<div class="page-head">
  <h1>Listing Homeworks</h1>
</div>

<div class="matter">
  <div class="container-fluid">
    <div class="row-fluid">
      <p id="notice"><%= notice %></p>
      <table class="tablesorter" id="myTable">
        <thead>
          <tr>
            <th>Name</th>
            <th>Content</th>
            <th colspan="3" class="not_sortable" onclick='return false;'>Options</th>
          </tr>
        </thead>
        <tbody>

        <% @homeworks.each do |homework| %>
          <% if (homework.school_days.sort_by{|school_day| school_day.calendar_date}[0].calendar_date <= Date.today) || (can? :edit, @homework) %>
          <tr>
            <td><%= homework.title %></td>
            <td><%= homework.content %></td>
            <td><%= link_to 'Show', homework %></td>
            <% if can? :update, @homework %>
              <td><%= link_to 'Edit', edit_homework_path(homework) %></td>
              <td><%= link_to 'Destroy', homework, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
          <% end %>
        <% end %>
      </tbody>
        </table>

        <br />
        <% if can? :create, @homework %>
          <%= link_to 'New Homework', new_homework_path %>
        <% end %>
    </div>
  </div>
</div>