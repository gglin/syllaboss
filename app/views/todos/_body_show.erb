<div class="span9 maxspan minspan">
  <div class="widget wlightblue mainwidget">
    <div class="widget-head">
      <div class="pull-left">To-Do</div>
      <div class="widget-icons pull-right">
        <% if can? :edit, @todo %>
          <% path = @from_preview ? edit_todo_preview_path : edit_todo_path %>
          <span class="admin"><a href="<%= path %>"><i class="icon-pencil"></i></a></span>
        <% end %>

        <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a> 
        <!-- <a href="#" class="wclose"><i class="icon-remove"></i></a> -->
      </div>
      <div class="clearfix"></div>
    </div>

    <div class="widget-content">
      <div class="padd lowtop">

        <p>
          <h3><%= @todo.print_name %></h3>
        </p>

        <p>
          <%= auto_link(better_format(@todo.gist), :all, :target => "_blank") %>
        </p>

      </div>
    </div>
  </div>
</div>