<div class="matter">
  <div class="container-fluid">

    <%= render "layouts/messages" %>
    
    <div class="row-fluid fit-content">

      <div class="span7 maxspan minspan dayform-span">
        <div class="widget wlightblue mainwidget">
          <div class="widget-head">
            <div class="pull-left">Update Profile</div>
            <div class="widget-icons pull-right">
              <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a> 
              <!-- <a href="#" class="wclose"><i class="icon-remove"></i></a> -->
            </div>
            <div class="clearfix"></div>
          </div>

          <div class="widget-content">
            <div class="padd lowtop">

              <%= form_for @user, :html => {class: "form-horizontal", multipart: true} do |f| %>
                <% if @user.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

                    <ul>
                    <% @user.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                    </ul>
                  </div>
                <% end %>


                <div class="control-group">
                  <%= f.label :full_name, "Full Name #{mark_required(@user, :full_name)}", class: "control-label" %>
                  <div class="controls">
                    <%= f.text_field :full_name %>
                  </div>
                </div>

                <!-- <div class="control-group"> 
                  <%# f.label :username, "Username #{mark_required(@user, :username)}", class: "control-label" %>
                  <div class="controls">
                  <%# f.text_field :username %>
                  </div>
                </div> -->

                <div class="control-group">
                  <%= f.label :email, "Email #{mark_required(@user, :email)}", class: "control-label" %>
                  <div class="controls">
                    <%= f.text_field :email %>
                  </div>
                </div>

                <div class="control-group">
                  <%= f.label :facebook, "Facebook URL", class: "control-label" %>
                  <div class="controls">
                    <%= f.text_field :facebook %>
                  </div>
                </div>

                <div class="control-group">
                  <%= f.label :linkedin, "LinkedIn URL", class: "control-label" %>
                  <div class="controls">
                    <%= f.text_field :linkedin %>
                  </div>
                </div>

                <div class="control-group">
                  <%= f.label :twitter, "Twitter Username", class: "control-label" %>
                  <div class="controls">
                    @<%= f.text_field :twitter %>
                  </div>
                </div>

                <% action = @user.image_url(:thumb) ? "Replace" : "Add" %>
                
                <div class="control-group">
                  <%= f.label :image, "Current Profile Image:", class: "control-label" %>
                  <div class="controls">
                    <% if @user.image_url(:thumb) %>
                      <%= image_tag(@user.image_url(:thumb), :class => "stream-user-pic") %>
                    <% else %>
                      <em>None</em> 
                    <% end %>
                  </div>
                </div>
                
                <div class="control-group">
                  <%= f.label :image, "#{action} Image:", class: "control-label" %>
                  <div class="controls">
                    <%= f.file_field :image %>
                  </div>
                </div>

                <div class="actions inline">
                  <%= f.submit "Submit", class: "btn btn-info" %>
                </div>

                <%= link_to "Cancel", cancel_path_for(@user), class: "btn btn-inverse link-btn" %>

              <% end %>
            </div>
          </div>
        </div>
        
      </div>

    </div>

  </div>
</div>
